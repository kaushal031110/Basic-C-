#include <iostream>
using namespace std;
int main(){
int row, col;
int n;
cout<<"Input the num: ";
cin>>n;
   for(row=1;row<=n;row++){
    // space print
    for(col=1;col<=n-row;col++){
        cout<<"  ";
    }
    for(col=1;col<=row;col++){
      cout<<"* ";
    }
      cout<<endl;
       }
       return 0;
    }
OUTPUT- n=7
            *
          * *
        * * *
      * * * * 
    * * * * *
  * * * * * *
* * * * * * *
